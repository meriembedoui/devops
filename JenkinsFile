pipeline {
    agent any

    tools {
        maven 'maven3'
        jdk 'java17'
    }

    environment {
        DOCKERHUB_CREDENTIALS = 'dockerhub'
        DOCKERHUB_USER = 'meriemb2'
        IMAGE_NAME = 'mon_image_modifiee'
        IMAGE_TAG = '1.0'
        K8S_NAMESPACE = 'devops'
        SONAR_PROJECT_KEY = 'student-management'
        SONAR_HOST_URL = 'http://192.168.56.10:9000'
    }

    stages {
        stage('Clone repository') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/meriembedoui/devops.git'
            }
        }

        stage('Build Maven') {
            steps {
                sh 'mvn -B clean package -DskipTests'
            }
        }

        stage('SonarQube Analysis') {
            environment {
                SONAR_TOKEN = credentials('sonar-token')
            }
            steps {
                sh "mvn sonar:sonar -Dsonar.projectKey=${SONAR_PROJECT_KEY} -Dsonar.host.url=${SONAR_HOST_URL} -Dsonar.login=$SONAR_TOKEN"
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${DOCKERHUB_USER}/${IMAGE_NAME}:${IMAGE_TAG} -f DockerFile ."
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: "${DOCKERHUB_CREDENTIALS}",
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh '''
                        echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                        docker push ${DOCKER_USER}/${IMAGE_NAME}:${IMAGE_TAG}
                        docker logout
                    '''
                }
            }
        }

        stage('Deploy MySQL on Kubernetes') {
            steps {
                sh "kubectl apply -f k8s/mysql-deployment.yaml -n ${K8S_NAMESPACE}"
                sh "kubectl rollout status deployment/mysql -n ${K8S_NAMESPACE}"
            }
        }

        stage('Deploy Spring Boot on Kubernetes') {
            steps {
                sh "kubectl apply -f k8s/spring-deployment.yaml -n ${K8S_NAMESPACE}"
                sh "kubectl rollout status deployment/spring-app -n ${K8S_NAMESPACE}"
            }
        }

        stage('Verify Deployment') {
            steps {
                sh "kubectl get pods -n ${K8S_NAMESPACE}"
                sh "kubectl get svc -n ${K8S_NAMESPACE}"
                sh "minikube service spring-boot-service -n ${K8S_NAMESPACE} --url"
            }
        }
    }

    post {
        success {
            echo 'Pipeline terminé avec succès !'
        }
        failure {
            echo 'Le pipeline a échoué.'
        }
    }
}
