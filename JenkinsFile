pipeline {
    agent any

    tools {
        maven 'maven3'
        jdk 'java17'
    }

    environment {
        DOCKERHUB_CREDENTIALS = 'dockerhub'
        DOCKERHUB_USER = 'meriemb2'
        IMAGE_NAME = 'mon_image_modifiee'
        IMAGE_TAG = '1.0'
        K8S_NAMESPACE = 'devops'
        SONAR_PROJECT_KEY = 'student-management'
        SONAR_HOST_URL = 'http://192.168.56.10:9000'
    }

    stages {
        stage('Clone repository') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/meriembedoui/devops.git'
            }
        }

        stage('Build Maven') {
            steps {
                sh 'mvn -B clean package -DskipTests'
            }
        }

      

        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${DOCKERHUB_USER}/${IMAGE_NAME}:${IMAGE_TAG} -f DockerFile ."
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: "${DOCKERHUB_CREDENTIALS}",
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS' )])
{
                    sh '''
                        echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                        docker push ${DOCKER_USER}/${IMAGE_NAME}:${IMAGE_TAG}
                        docker logout
                    '''
                }
            }
        }

    
    }

}
