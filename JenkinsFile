pipeline {
    agent any

    tools {
        maven 'maven3'
        jdk 'java17'
    }

    environment {
        // Active le profil "test" pour utiliser H2 au lieu de MySQL
        SPRING_PROFILES_ACTIVE = 'test'
    }

    stages {
        stage('Clone repository') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/meriembedoui/devops.git'
            }
        }

        stage('Build & Test') {
            steps {
                // Build avec Maven, exécute les tests automatiquement
                sh 'mvn -B clean package -DskipTests'
            }
        }

        stage('Archive Artifact') {
            steps {
                // Sauvegarde le jar généré comme artefact Jenkins
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
    }

    post {
        success {
            echo 'Build et tests réussis !'
        }
        failure {
            echo 'Le build ou les tests ont échoué.'
        }
    }
}
